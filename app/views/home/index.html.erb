<script>
  $(document).ready(function() {
    let bookmarkButtons = Array.from(document.getElementsByClassName('fa-bookmark'));
    bookmarkButtons.forEach((button) => {
        button.addEventListener('click', () => {
            toggleBookmarkFill(button)
        })
    })

    function toggleBookmarkFill(button) {
      button.classList.toggle('fas')
      button.classList.toggle('far')
    }
  });
</script>














