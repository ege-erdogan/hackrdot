<table class="table table-borderless">
  <thead class="hn-filler">
    <th colspan="3">
      
    </th>
  </thead>
  <% @hn_posts.each do |hn_post| %>
    <tr class="hn-row">
      <td>
        <strong class="hn-secondary-text">
          <%= hn_post.score %>
        </strong>
      </td>
      <td>
        <a href="<%= hn_post.article_url %>" class="hn-title" target="_blank">
          <%= hn_post.title %>
        </a>
        <small class="text-muted hn-secondary-text">
          (<%= hn_post.domain %>)
        </small>
      </td>
      <td>
        <a class="btn btn-secondary hn-comment-button btn-block btn-sm" href="<%= hn_post.comments_url %>" target="_blank">
          <strong><%= hn_post.comment_count %></strong>
        </a>
      </td>
    </tr>
  <% end %>
</table>